<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  

<!-- MyBatis에 내장된 별명 사용하기

예) 
	java.lang.Integer => int
	java.util.Date => date
	java.util.Map => map
	java.util.List => list
	java.util.HashMap => hashmap
	java.util.ArrayList => arraylist
	...
	
	
	MyBatis 설정 파일에 정의된 단축 별명 사용하기
  => <typeAliases> 태그에 정의된 별명 사용 -->
 
 
<mapper namespace="java02.test19.server.ProductDao">


	<select id="selectList" parameterType="map" resultType="Product">
		SELECT
		PNO as no,
		PNAME as name,
		QTY as quantity,
		MKNO as makerNo
		FROM
		PRODUCTS

		<if test="pageSize != 0">
			limit #{startIndex}, #{pageSize}
		</if>
	</select>

	<!-- 만약 파라미터 값이 문자열, 기본형, 랩퍼클래스 객체라면, 값을 꺼낼때마다 아무이름이나 지정해도 된다. -->
	<select id="selectOne" parameterType="int" resultType="Product">
		SELECT
		PNO as no,
		PNAME as name,
		QTY as quantity,
		MKNO as	makerNo
		FROM PRODUCTS
		WHERE PNO=#{value}
	</select>

	<insert id="insert" parameterType="Product">
		INSERT INTO PRODUCTS(PNAME,QTY,MKNO)
		VALUES(#{name},#{quantity},#{makerNo})
	</insert>

	<update id="update" parameterType="Product">
		UPDATE PRODUCTS SET
		PNAME=#{name},
		QTY=#{quantity},
		MKNO=#{makerNo}
		WHERE PNO=#{no}

	</update>
	
	<delete id="delete" parameterType="int">
	DELETE FROM PRODUCTS WHERE PNO=#{value}
	</delete>
</mapper>











