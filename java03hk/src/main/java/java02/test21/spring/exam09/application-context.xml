<?xml version="1.0" encoding="UTF-8"?>

<!-- xmlns : xml namespace -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 의존 객체 배열을 주입하기 => 배열이나 java.util.Set 타입의 프로퍼티에 대해서는 <set>태그를 사용하여 값을 
		설정할 수 있다. => java.util.Map 타입의 프로퍼티에 대해서는 <map> 태그를 사용하여 값을 설정할 수 있다. => -->

	<bean id="b01" class="java02.test21.spring.exam09.Car">
		<property name="model" value="그랜져" />
		<property name="cc" value="2500" />
		<property name="engine">
			<bean class="java02.test21.spring.exam09.Engine" p:maker="현대자동차"
				p:valve="16" />
		</property>
		<property name="tires">
			<array> <!-- 배열을 만들어서 집어넣는 객체 : array -->
				<bean class="java02.test21.spring.exam09.Tire" p:maker="한국타이어"
					p:width="205" p:height="60" p:radial="16" />
				<bean class="java02.test21.spring.exam09.Tire" p:maker="한국타이어"
					p:width="205" p:height="60" p:radial="16" />
				<bean class="java02.test21.spring.exam09.Tire" p:maker="금호타이어"
					p:width="205" p:height="60" p:radial="16" />
				<bean class="java02.test21.spring.exam09.Tire" p:maker="금호타이어"
					p:width="205" p:height="60" p:radial="16" />
			</array>
		</property>
	</bean>



	<bean id="t01" class="java02.test21.spring.exam09.Tire" p:maker="한국타이어"
		p:width="205" p:height="60" p:radial="16" />

	<bean id="b02" class="java02.test21.spring.exam09.Car">
		<property name="options">
			<map>
				<entry>
					<key>
						<value>sunroof</value>
					</key>
					<value>yes</value>
				</entry>
				<entry key="sideAirbag" value="yes" />
				<entry key="spareTire">
					<ref bean="t01" />
				</entry>
			</map>
		</property>
	</bean>
</beans>