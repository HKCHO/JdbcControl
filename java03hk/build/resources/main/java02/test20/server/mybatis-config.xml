<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
<typeAliases>
  	<typeAlias type ="java02.test12.server.Member" alias="Member"/>
  </typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/studydb?useUnicode=true&amp;characterEncoding=utf8" />
				<property name="username" value="study" />
				<property name="password" value="study" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="java02/test20/server/MemberDao.xml" />
	</mappers>

</configuration>

